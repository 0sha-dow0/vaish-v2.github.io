<script>
    document.getElementById("downloadLink").addEventListener("click", function (event) {
        event.preventDefault();
        
        // Create a temporary anchor element to download the file
        const link = document.createElement('a');
        link.href = this.href;
        link.download = 'resume.pdf'; // This will trigger the download
        link.click();
        
        // Open the downloaded file in a new tab after a short delay
        setTimeout(() => {
            window.open(this.href, '_blank');
        }, 500);  // Delay to ensure download starts before opening
    });
</script>
